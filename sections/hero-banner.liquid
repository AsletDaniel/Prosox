<div class="hero-section">
    <div class="gradient-overlay"></div>
    <div class="text-content">
        <h1>{{ section.settings.title }}</h1>
        <p><span class="icon">{{ section.settings.stars }}</span> {{ section.settings.subtitle }}</p>
        <p>{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_link }}" class="shop-button">{{ section.settings.button_text }}</a>
    </div>
    
    <!-- Columnas de imágenes dinámicas -->
    {% for block in section.blocks %}
      <div id="column{{ forloop.index }}" class="column {{ block.settings.size }}">
          {% if block.settings.image1 != blank %}
              <img src="{{ block.settings.image1 | image_url }}" alt="Image 1">
          {% endif %}
          {% if block.settings.image2 != blank %}
              <img src="{{ block.settings.image2 | image_url }}" alt="Image 2">
          {% endif %}
          {% if block.settings.image3 != blank %}
              <img src="{{ block.settings.image3 | image_url }}" alt="Image 3">
          {% endif %}
      </div>
    {% endfor %}
</div>


<style>
.hero-section {
    position: relative;
    display: flex;
    gap: 2px;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    justify-content: space-between;
}

.gradient-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30%;
    background: linear-gradient(to top, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
    pointer-events: none;
    z-index: 1;
}

.text-content {
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: white;
    z-index: 2;
}

.text-content h1 {
    font-size: 3rem;
    margin: 0;
}

.text-content p {
    font-size: 1.2rem;
    margin: 5px 0;
}

.shop-button {
    margin-top: 10px;
    padding: 10px 20px;
    background-color: yellow;
    color: black;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    z-index: 3;
}

.column {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex-grow: 1;
    height: 100%;
    overflow: hidden;
}

.column img {
    width: 100%;
    border-radius: 10px;
    box-shadow: 0px 0px 10px 0px rgba(214, 239, 67, 0.17);
    object-fit: cover;
}

.large img {
    height: 100%;
    max-height: 585px;
}

.small img {
    height: 100%;
    max-height: 316px;
}

@keyframes scrollUp {
    0% { transform: translateY(0); }
    100% { transform: translateY(-100%); }
}

@keyframes scrollDown {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(0); }
}

@media only screen and (max-width: 768px) {
    .hero-section {
        flex-wrap: wrap;
        height: auto;
        width: 100vw;
        max-height: 100vh;
        overflow: hidden;
    }

    .column {
        width: 48%;
    }

    .column img {
        height: 316px;
        width: 100%;
    }

    @keyframes scrollUpMobile {
        0% { transform: translateY(0); }
        100% { transform: translateY(-100%); }
    }

    @keyframes scrollDownMobile {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(0); }
    }
}
</style>

{% schema %}
{
  "name": "Hero Section with Images",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título principal",
      "default": "LLEVA AL MAXIMO TU RENDIMIENTO"
    },
    {
      "type": "text",
      "id": "stars",
      "label": "Íconos de estrellas",
      "default": "★ ★ ★ ★ ★"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "OVER 100,000+ HAPPY CUSTOMERS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Joga has helped over 100,000+ footballers improve their speed, agility and comfort on the pitch."
    },
    {
  "type": "url",
  "id": "button_link",
  "label": "Enlace del botón",
  "default": "/"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Shop Best Sellers"
    }
  ],
  "blocks": [
    {
      "type": "image_column",
      "name": "Columna de imágenes",
      "settings": [
        {
          "type": "image_picker",
          "id": "image1",
          "label": "Imagen 1"
        },
        {
          "type": "image_picker",
          "id": "image2",
          "label": "Imagen 2"
        },
        {
          "type": "image_picker",
          "id": "image3",
          "label": "Imagen 3"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Tamaño de columna",
          "options": [
            {
              "value": "large",
              "label": "Grande"
            },
            {
              "value": "small",
              "label": "Pequeño"
            }
          ],
          "default": "large"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section with Images",
      "category": "Custom"
    }
  ]
}
{% endschema %}

  