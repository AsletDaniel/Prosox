<style>
  .why-joga-container {
    background-color: #000000;
    color: #ffffff;
    padding: 40px 20px;
    font-family: Arial, sans-serif;
    position: relative;
    background-size: cover;
    background-position: center;
  }
  .why-joga-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .why-joga-left {
    width: 60%;
  }
  .why-joga-title {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #ffffff;
  }
  .why-joga-title span {
    color: #FFD700;
  }
  .comparison-columns {
    display: flex;
    width: 100%;
    position: relative;
  }
  .joga-column, .competitor-column {
    width: 50%;
    padding: 20px;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
  }
  .joga-column {
    background-color: #00A86B;
    margin-right: 10px;
  }
  .competitor-column {
    background-color: #1A1A1A;
  }
  .feature-list {
    list-style-type: none;
    padding: 0;
    position: relative;
    z-index: 2;
  }
  .feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    font-size: 14px;
  }
  .feature-icon {
    margin-right: 10px;
    font-size: 20px;
  }
  .player-image {
    position: absolute;
    top: -50px;
    left: -20px;
    width: 200px;
    z-index: 1;
  }
  .shinpad-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 60px;
    z-index: 1;
  }
  .athletes-image {
    width: 35%;
    object-fit: cover;
    border-radius: 10px;
  }
  @media (max-width: 768px) {
    .why-joga-content {
      flex-direction: column;
    }
    .why-joga-left, .comparison-columns, .joga-column, .competitor-column {
      width: 100%;
    }
    .athletes-image {
      width: 100%;
      margin-top: 20px;
    }
  }
</style>

<div class="why-joga-container" style="background-image: url({{ section.settings.background_image | img_url: '1600x' }});">
  <div class="why-joga-content">
    <div class="why-joga-left">
      <h1 class="why-joga-title">WHY <span>JOGA</span>?</h1>
      <div class="comparison-columns">
        <div class="joga-column">
          {% if section.settings.player_image %}
            <img src="{{ section.settings.player_image | img_url: '300x' }}" alt="Jugador JOGA" class="player-image">
          {% endif %}
          <ul class="feature-list">
            {% for block in section.blocks %}
              {% if block.type == 'comparison_item' %}
                <li class="feature-item">
                  <span class="feature-icon">üî•</span>
                  {{ block.settings.joga_feature }}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        <div class="competitor-column">
          {% if section.settings.shinpad_icon %}
            <img src="{{ section.settings.shinpad_icon | img_url: '120x' }}" alt="Icono de espinilleras" class="shinpad-icon">
          {% endif %}
          <ul class="feature-list">
            {% for block in section.blocks %}
              {% if block.type == 'comparison_item' %}
                <li class="feature-item">
                  <span class="feature-icon">‚ùå</span>
                  {{ block.settings.competitor_feature }}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    {% if section.settings.athletes_image %}
      <img src="{{ section.settings.athletes_image | img_url: '600x' }}" alt="Atletas JOGA" class="athletes-image">
    {% endif %}
  </div>
</div>